<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view"
        android:scrollbars="vertical"
        android:background="@android:color/transparent"
        tools:listitem="@layout/activity_list"/>

    <EditText
        android:id="@+id/edit_new_skribbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="60dp"
        android:autofillHints="@string/new_sticky_note"
        android:hint="@string/new_skribbl_field"/>


    <ImageButton
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="100dp"
        android:src="@drawable/ic_submit_new" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/float_button"
        android:src="@drawable/ic_add"
        android:layout_gravity="end|bottom"/>

</FrameLayout>

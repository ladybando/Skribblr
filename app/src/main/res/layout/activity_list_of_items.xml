<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ListOfItemsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraint_new_skribbl">

        <EditText
            android:id="@+id/new_item_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:autofillHints="Test skribbl"
            android:hint="@string/sample_task"
            android:inputType="textMultiLine"
            android:textColor="@color/primary_light"
            android:textColorHint="@color/primary_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/submit_new_button"
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/rounded_corner"
            android:contentDescription="@string/submit"
            android:minHeight="48dp"
            android:src="@drawable/ic_keyboard_return"
            app:layout_constraintStart_toEndOf="@+id/new_item_edit_text"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>